# =============================================================================
# WEBSITE-SSR ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update with your values

# Database
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5433/uni-feedback

# Environment
NODE_ENV=development

# Server
PORT=3000

# API Base URL - Injected at runtime via window.ENV in SSR
# Development: http://localhost:3001
# Production: https://api.yourdomain.com
VITE_API_BASE_URL=http://localhost:3001

# CDN URL for assets (logos, images, etc.)
# Development and Production can use the same public R2 bucket
VITE_CDN_URL=https://cdn.uni-feedback.com

# PostHog Analytics
VITE_PUBLIC_POSTHOG_KEY=your_posthog_api_key_here
VITE_PUBLIC_POSTHOG_HOST=https://e.uni-feedback.com

# Microsoft Clarity Analytics (Production only)
VITE_PUBLIC_CLARITY_PROJECT_ID=your_clarity_project_id_here
