<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; -webkit-print-color-adjust: exact; }
        .page-break { page-break-after: always; }

        /* Better page break handling for feedback cards */
        .feedback-card {
            margin-top: 1.5rem;
            margin-bottom: 1.5rem;
            /* Make broken cards render as separate boxes on each page */
            box-decoration-break: clone;
            -webkit-box-decoration-break: clone;
            /* Enhanced shadow and border for print-friendly design */
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1);
            border: 1px solid #e5e7eb;
        }

        /* Remove top margin from first feedback card */
        .feedback-card:first-child {
            margin-top: 0;
        }

        /* Prevent awkward single-line orphans/widows in feedback content */
        .feedback-content, .feedback-content p {
            orphans: 3;
            widows: 3;
        }

        /* Markdown styles for feedback comments */
        .feedback-content h1 {
            font-size: 1.25rem; /* text-xl */
            font-weight: 600; /* font-semibold */
            color: #111827; /* text-gray-900 */
            margin-top: 1rem; /* mt-4 */
            margin-bottom: 0.75rem; /* mb-3 */
        }
        .feedback-content h2 {
            font-size: 1.125rem; /* text-lg */
            font-weight: 600; /* font-semibold */
            color: #111827; /* text-gray-900 */
            margin-top: 0.75rem; /* mt-3 */
            margin-bottom: 0.5rem; /* mb-2 */
        }
        .feedback-content h3 {
            font-size: 1.125rem; /* text-lg */
            font-weight: 600; /* font-semibold */
            color: #111827; /* text-gray-900 */
            margin-top: 0.5rem; /* mt-2 */
            margin-bottom: 0.25rem; /* mb-1 */
        }
        .feedback-content p {
            margin-bottom: 0.5rem;
        }
        .feedback-content ul, .feedback-content ol {
            margin-left: 1.5rem;
            margin-bottom: 0.5rem;
        }
        .feedback-content ul {
            list-style-type: disc;
        }
        .feedback-content ol {
            list-style-type: decimal;
        }
        .feedback-content li {
            margin-bottom: 0.25rem;
        }
        .feedback-content strong {
            font-weight: 600;
        }
        .feedback-content em {
            font-style: italic;
        }
        .feedback-content code {
            background-color: #f3f4f6;
            padding: 0.125rem 0.25rem;
            border-radius: 0.25rem;
            font-family: monospace;
            font-size: 0.875rem;
        }
        .feedback-content pre {
            background-color: #f3f4f6;
            padding: 0.75rem;
            border-radius: 0.375rem;
            overflow-x: auto;
            margin-bottom: 0.5rem;
        }
        .feedback-content pre code {
            background-color: transparent;
            padding: 0;
        }
        .feedback-content blockquote {
            border-left: 4px solid #d1d5db;
            padding-left: 1rem;
            margin-left: 0;
            margin-bottom: 0.5rem;
            color: #6b7280;
        }
    </style>
</head>
<body class="text-[#111827]">

    <div class="max-w-[800px] mx-auto bg-white min-h-screen shadow-sm border-x border-slate-100">

        <header class="p-10 pb-6 bg-white">
            <!-- Logo and School Year - Full Width Row -->
            <div class="flex justify-between items-start mb-6">
                <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#23729f" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21.42 10.922a1 1 0 0 0-.019-1.838L12.83 5.18a2 2 0 0 0-1.66 0L2.6 9.08a1 1 0 0 0 0 1.832l8.57 3.908a2 2 0 0 0 1.66 0z"/>
                        <path d="M22 10v6"/>
                        <path d="M6 12.5V16a6 3 0 0 0 12 0v-3.5"/>
                    </svg>
                    <span class="text-lg font-semibold text-gray-800">Uni Feedback</span>
                </div>
                <%
                // Format school year as "2024/2025"
                const formattedYear = `${data.schoolYear}/${data.schoolYear + 1}`;
                %>
                <span class="text-xs font-bold text-slate-400 uppercase tracking-widest"><%= formattedYear %> REPORT</span>
            </div>

            <!-- Course Info and QR Code Row -->
            <div class="flex justify-between items-start gap-6">
                <!-- Course Details -->
                <div class="flex-1 min-w-0">
                    <!-- Degree Name -->
                    <div class="text-sm font-semibold text-slate-600 mb-2"><%= data.degree %></div>

                    <!-- Course Name -->
                    <h1 class="text-4xl font-extrabold tracking-tight mb-3 text-[#23729f] break-words"><%= data.courseName %></h1>

                    <!-- Acronym and ECTS Chips -->
                    <div class="flex items-center gap-3 text-slate-500 font-medium">
                        <span class="bg-slate-100 px-3 py-1 rounded-full text-xs text-slate-700 font-bold tracking-tight uppercase"><%= data.courseCode %></span>
                        <span>•</span>
                        <span><%= data.ects %> ECTS</span>
                    </div>
                </div>

                <!-- QR Code -->
                <a target="_blank" href="<%= data.websiteUrl %>/courses/<%= data.courseId %>" class="group flex flex-col items-center gap-2 no-underline flex-shrink-0">
                    <div class="p-2 bg-white border border-slate-200 rounded-2xl shadow-sm group-hover:border-[#23729f] transition-colors">
                        <img src="<%= data.qrCodeDataUrl %>" class="w-16 h-16" alt="QR Code">
                    </div>
                    <span class="text-[9px] font-black uppercase tracking-widest text-slate-400 group-hover:text-[#23729f] transition-colors">
                        View Online →
                    </span>
                </a>
            </div>
        </header>

        <!-- Ratings Section: Compact side by side with flexbox -->
        <div class="px-10 py-6 bg-white">
            <div class="flex gap-12">
                <!-- Student Rating -->
                <div class="flex-1">
                    <div class="flex items-start gap-3 mb-3 min-h-[20px]">
                        <span class="text-xs font-bold uppercase tracking-widest text-slate-400">Student Rating:</span>
                        <span class="text-xs font-bold text-gray-800"><%= data.avgRating %></span>
                        <span class="text-slate-400 font-medium text-xs">/ 5.0</span>
                    </div>
                    <!-- Distribution bars -->
                    <div class="space-y-1.5">
                        <%
                        // Calculate max count for relative percentages (Google Reviews style)
                        const ratingCounts = [5,4,3,2,1].map(star => data.distribution[star] || 0);
                        const maxRatingCount = Math.max(...ratingCounts, 1);

                        [5,4,3,2,1].forEach(star => {
                           const count = data.distribution[star] || 0;
                           const percentage = (count / maxRatingCount) * 100;
                        %>
                        <div class="flex items-center gap-2">
                            <span class="text-[10px] font-bold text-slate-500 w-2"><%= star %></span>
                            <div class="flex-1 bg-slate-100 h-1.5 rounded-full overflow-hidden">
                                <div class="h-full rounded-full bg-[#23729f]" style="width: <%= percentage %>%"></div>
                            </div>
                            <span class="text-[10px] font-bold text-slate-400 w-5 text-right"><%= count %></span>
                        </div>
                        <% }) %>
                    </div>
                </div>

                <!-- Workload Rating -->
                <div class="flex-1">
                    <div class="flex items-start gap-3 mb-3 min-h-[20px]">
                        <span class="text-xs font-bold uppercase tracking-widest text-slate-400">Workload:</span>
                        <%
                        const workloadColors = {
                            'Very heavy': 'bg-red-100 text-red-800 border-red-200',
                            'Heavy': 'bg-orange-100 text-orange-800 border-orange-200',
                            'Moderate': 'bg-yellow-100 text-yellow-800 border-yellow-200',
                            'Light': 'bg-lime-100 text-lime-800 border-lime-200',
                            'Very light': 'bg-green-100 text-green-800 border-green-200'
                        };
                        const workloadColor = workloadColors[data.avgWorkloadText] || 'bg-gray-100 text-gray-800 border-gray-200';
                        %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-md text-[10px] font-semibold border <%= workloadColor %>">
                            <%= data.avgWorkloadText %>
                        </span>
                    </div>
                    <!-- Workload Distribution bars -->
                    <div class="space-y-1.5">
                        <%
                        const workloadLabels = ['Very light', 'Light', 'Moderate', 'Heavy', 'Very heavy'];

                        // Calculate max count for relative percentages (Google Reviews style)
                        const workloadCounts = [5,4,3,2,1].map(rating => data.workloadDistribution[rating] || 0);
                        const maxWorkloadCount = Math.max(...workloadCounts, 1);

                        [5,4,3,2,1].forEach((rating, idx) => {
                           const label = workloadLabels[rating - 1];
                           const count = data.workloadDistribution[rating] || 0;
                           const percentage = (count / maxWorkloadCount) * 100;
                        %>
                        <div class="flex items-center gap-2">
                            <span class="text-[9px] font-bold text-slate-500 w-16 text-right"><%= label %></span>
                            <div class="flex-1 bg-slate-100 h-1.5 rounded-full overflow-hidden">
                                <div class="bg-[#23729f] h-full rounded-full" style="width: <%= percentage %>%"></div>
                            </div>
                            <span class="text-[10px] font-bold text-slate-400 w-5 text-right"><%= count %></span>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>

            <!-- Based on X contributions - footnote style -->
            <p class="text-xs text-slate-400 mt-4">
                Based on <%= data.totalResponses %> anonymous student contributions
            </p>
        </div>

        <!-- Summary Section (no title, just content) -->
        <section class="px-10 py-6 bg-white">
            <div class="mb-4">
                <div class="flex flex-wrap gap-2">
                    <% data.emotions.forEach(emotion => { %>
                        <span class="text-xs font-semibold border border-[#23729f]/30 bg-[#23729f]/5 text-[#23729f] px-3 py-1 rounded-lg"><%= emotion %></span>
                    <% }) %>
                </div>
            </div>
            <p class="text-base leading-relaxed text-gray-700 mb-4">
                <%= data.aiSummary %>
            </p>
            <div class="pt-4 border-t border-slate-100">
                <h4 class="text-xs font-bold text-slate-400 uppercase mb-2">Student Persona</h4>
                <p class="text-sm leading-relaxed text-gray-600 italic">"<%= data.persona %>"</p>
            </div>
        </section>

        <!-- Pros and Cons -->
        <div class="p-10 grid grid-cols-2 gap-8 bg-white">
            <div class="p-6 rounded-xl border-2 border-slate-200">
                <h4 class="font-bold text-sm mb-4 uppercase tracking-widest text-green-600">✓ The Highlights</h4>
                <ul class="text-sm space-y-2.5 font-medium text-slate-700">
                    <% data.pros.forEach(pro => { %> <li class="flex gap-2 leading-snug"><span>•</span> <span><%= pro %></span></li> <% }) %>
                </ul>
            </div>
            <div class="p-6 rounded-xl border-2 border-slate-200">
                <h4 class="font-bold text-sm mb-4 uppercase tracking-widest text-slate-400">⚠ Things to know</h4>
                <ul class="text-sm space-y-2.5 font-medium text-slate-700">
                    <% data.cons.forEach(con => { %> <li class="flex gap-2 leading-snug"><span>•</span> <span><%= con %></span></li> <% }) %>
                </ul>
            </div>
        </div>

        <footer class="px-10 py-8 bg-white text-left">
            <p class="text-xs text-slate-400 mb-1">
                Generated on <%= data.generatedDate %>
            </p>
            <p class="text-xs text-slate-400">
                Generated by <a target="_blank" href="https://uni-feedback.com" class="text-[#23729f] hover:underline">Uni-Feedback.com</a> • Empowering students with honest, anonymous insights.
            </p>
        </footer>
    </div>

    <!-- Raw Feedback Section -->
    <div class="max-w-[800px] mx-auto bg-white min-h-screen px-10 pt-16 pb-10 border-x border-slate-100">
        <h2 class="text-2xl font-black tracking-tight mb-8">Student Feedback</h2>
        <div class="space-y-6">
            <% data.submissions.forEach(sub => {
                // Get workload color
                const workloadColors = {
                    'Very heavy': 'bg-red-100 text-red-800 border-red-200',
                    'Heavy': 'bg-orange-100 text-orange-800 border-orange-200',
                    'Moderate': 'bg-yellow-100 text-yellow-800 border-yellow-200',
                    'Light': 'bg-lime-100 text-lime-800 border-lime-200',
                    'Very light': 'bg-green-100 text-green-800 border-green-200',
                    'Not specified': 'bg-gray-100 text-gray-600 border-gray-200'
                };
                const workloadColor = workloadColors[sub.workload] || 'bg-gray-100 text-gray-600 border-gray-200';
            %>
                <div class="bg-white rounded-xl p-6 feedback-card">
                    <!-- Header with rating and date -->
                    <div class="mb-4">
                        <div class="flex flex-wrap items-center justify-between gap-3">
                            <div class="flex flex-wrap items-center gap-3">
                                <!-- Star Rating -->
                                <div class="flex gap-0.5">
                                    <% for (let i = 1; i <= 5; i++) {
                                        const isFilled = i <= sub.rating;
                                    %>
                                        <span class="text-2xl <%= isFilled ? 'text-yellow-500' : 'text-gray-200' %>">★</span>
                                    <% } %>
                                </div>
                                <!-- Workload Badge -->
                                <% if (sub.workload !== 'Not specified') { %>
                                <div class="inline-flex items-center px-3 py-1 text-xs text-gray-500 font-medium">
                                    <span class="mr-1.5">Workload:</span>
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-semibold border <%= workloadColor %>">
                                        <%= sub.workload %>
                                    </span>
                                </div>
                                <% } %>
                            </div>
                            <div class="text-right">
                                <% if (sub.date) { %>
                                    <div class="flex items-center justify-end gap-2">
                                        <p class="text-xs text-gray-400"><%= sub.date %></p>
                                        <a target="_blank" href="<%= data.websiteUrl %>/courses/<%= data.courseId %>#feedback-<%= sub.id %>" class="text-gray-400 hover:text-[#23729f] transition-colors">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M15 3h6v6"/>
                                                <path d="M10 14 21 3"/>
                                                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                                            </svg>
                                        </a>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Comment section -->
                    <% if (sub.comment) { %>
                        <div class="text-sm text-gray-700 leading-relaxed feedback-content">
                            <%- sub.comment %>
                        </div>
                    <% } else { %>
                        <p class="text-gray-500 italic text-sm">
                            This user did not leave any comment
                        </p>
                    <% } %>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
