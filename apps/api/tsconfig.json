{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types", "node"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@config": ["./src/config"],
      "@config/*": ["./src/config/*"],
      "@lib": ["./src/lib"],
      "@lib/*": ["./src/lib/*"],
      "@middleware": ["./src/middleware"],
      "@middleware/*": ["./src/middleware/*"],
      "@routes": ["./src/routes"],
      "@routes/*": ["./src/routes/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@uni-feedback/utils": ["../../packages/utils/src"],
      "@uni-feedback/db": ["../../packages/db/src"],
      "@uni-feedback/db/*": ["../../packages/db/src/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
