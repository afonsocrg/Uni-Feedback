{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@config": ["./src/config"],
      "@config/*": ["./src/config/*"],
      "@lib": ["./src/lib"],
      "@lib/*": ["./src/lib/*"],
      "@middleware": ["./src/middleware"],
      "@middleware/*": ["./src/middleware/*"],
      "@routes": ["./src/routes"],
      "@routes/*": ["./src/routes/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
