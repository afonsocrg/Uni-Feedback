{
  "name": "uni-feedback",
  "private": "true",
  "packageManager": "bun@1.2.18",
  "workspaces": [
    "apps/api",
    "apps/website",
    "apps/dashboard",
    "packages/*"
  ],
  "scripts": {
    "setup": "./setup-database.sh",
    "build": "turbo build",
    "build:dashboard": "turbo build --filter=@uni-feedback/dashboard",
    "build:website": "turbo build --filter=@uni-feedback/website",
    "build:ssg-website": "turbo build --filter=@uni-feedback/ssg-website",
    "dev": "bun run dev:all",
    "dev:all": "turbo dev:api dev:website dev:dashboard @uni-feedback/ui#dev db --parallel --ui=tui",
    "dev:website": "turbo dev:api dev:website @uni-feedback/ui#dev db --parallel --ui=tui",
    "dev:dashboard": "turbo dev:api dev:dashboard @uni-feedback/ui#dev db --parallel --ui=tui",
    "dev:ssg-website": "turbo dev:api dev:ssg-website @uni-feedback/ui#dev db --parallel --ui=tui",
    "start": "turbo start --parallel",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "db": "turbo db",
    "deploy": "turbo deploy",
    "deploy:api": "cd apps/api && bun wrangler deploy",
    "deploy:website": "./push_to_prod.sh",
    "deploy:dashboard": "./push_to_prod.sh",
    "deploy:prod": "bun run deploy:api && ./push_to_prod.sh",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm -f bun.lockb"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "turbo": "^2.5.5"
  },
  "bun": {
    "workspaces": {
      "nohoist": [
        "**/react-router",
        "**/react-router-dom",
        "**/@react-router/**"
      ]
    }
  }
}
