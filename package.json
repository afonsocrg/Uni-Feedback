{
  "name": "uni-feedback",
  "private": "true",
  "packageManager": "pnpm@9.15.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:dashboard": "turbo build --filter=@uni-feedback/dashboard",
    "build:website": "turbo build --filter=@uni-feedback/website",
    "build:website-ssr": "turbo build --filter=@uni-feedback/website-ssr",
    "dev": "pnpm run dev:all",
    "dev:all": "turbo dev:api dev:website dev:website-ssr dev:dashboard @uni-feedback/ui#dev db --parallel --ui=tui",
    "dev:dashboard": "turbo dev:db dev:api dev:dashboard --parallel --ui=tui",
    "dev:website-ssr": "turbo dev:db dev:api dev:website-ssr --parallel --ui=tui",
    "start": "turbo start --parallel",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "db": "turbo db",
    "db:start": "turbo start --filter=@uni-feedback/db",
    "db:stop": "turbo stop --filter=@uni-feedback/db",
    "db:shell": "dotenv run psql -h localhost -p 5433 -U postgres -d uni-feedback",
    "clean": "turbo clean && rm -f pnpm-lock.yaml && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "turbo": "^2.5.8"
  }
}
