{
  "name": "uni-feedback",
  "private": "true",
  "packageManager": "bun@1.2.18",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:dashboard": "turbo build --filter=@uni-feedback/dashboard",
    "build:website": "turbo build --filter=meic-feedback",
    "dev": "bun run dev:all",
    "dev:all": "turbo dev:api dev:website dev:dashboard @uni-feedback/ui#dev db --parallel --ui=tui",
    "dev:website": "turbo dev:api dev:website @uni-feedback/ui#dev db --parallel --ui=tui",
    "dev:dashboard": "turbo dev:api dev:dashboard @uni-feedback/ui#dev db --parallel --ui=tui",
    "start": "turbo start --parallel",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "db": "turbo db",
    "deploy": "turbo deploy",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm -f bun.lockb"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "turbo": "^2.5.5"
  }
}
