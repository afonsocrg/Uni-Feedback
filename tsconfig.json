{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@uni-feedback/ui": ["./packages/ui/src"],
      "@uni-feedback/ui/components": ["./packages/ui/src/components"],
      "@uni-feedback/ui/components/*": ["./packages/ui/src/components/*"],
      "@uni-feedback/ui/hooks": ["./packages/ui/src/hooks"],
      "@uni-feedback/ui/hooks/*": ["./packages/ui/src/hooks/*"],
      "@uni-feedback/ui/utils": ["./packages/ui/src/utils"],
      "@uni-feedback/ui/utils/*": ["./packages/ui/src/utils/*"],
      "@uni-feedback/api-client": ["./packages/api-client/src"],
      "@uni-feedback/utils": ["./packages/utils/src"]
    }
  },
  "include": [],
  "references": [
    { "path": "./packages/utils" },
    { "path": "./packages/ui" },
    { "path": "./packages/api-client" },
    { "path": "./apps/website" },
    { "path": "./apps/api" }
  ]
}
