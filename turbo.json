{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:website": {
      "cache": false,
      "persistent": true
    },
    "dev:dashboard": {
      "cache": false,
      "persistent": true
    },
    "dev:ssg-website": {
      "cache": false,
      "persistent": true
    },
    "dev:api": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "format": {
      "outputs": [],
      "inputs": ["**/*.{js,ts,jsx,tsx,md,json}"],
      "cache": false
    },
    "format:check": {
      "outputs": []
    },
    "db": {
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "dependsOn": ["build", "lint", "type-check"],
      "outputs": []
    }
  }
}
